extends layout.pug
block main
  .container
    div#out.bg-light.mt-5.mb-5.pt-3.pb-3.pl-5.rounded(width='50%')
      h1 Results
      table.table-responsive.table-hover.table-striped.table-light.w-auto#chargers
        
        thead.bg-success.rounded
          tr
            th Name
            th Address
            th 
            th.d-none Lattitude, Longitude
        tbody
          each charger in chargers
            tr.border-success
              // make the whole line clickable to bring you to detail page
              td= charger.address.title
              td #{charger.address.addressLine} #{charger.address.town}, #{charger.address.state} #{charger.address.postalCode}
              td 
                a(href="/detail/" + charger.id) #{charger.id}
              td.d-none #{charger.pos.lat}, #{charger.pos.lng}
