extends layout.pug
block main
  .container
    form(action="/directions_results" method="POST")
      h1 Plan a Route
      .form-group
        label(for='to') To*
        input#to.form-control(type='text' name="to" placeholder="COMING SOON!" required disabled) 
      .form-group
        label(for='from') From*
        input#from.form-control(type='text' name="from" placeholder="COMING SOON!" required disabled)
      input.btn.btn-primary(type='submit' value='Go' disabled)
