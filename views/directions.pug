extends layout.pug
block main
  .container.mt-5.mb-5
    form.bg-light.pt-3.pb-3.pl-3.pr-3.rounded(action="/directions_results" method="POST")
      h1 Plan a Route
      .form-group
        label(for='to') To*
        input#to.form-control.border-success(type='text' name="to" required)
      .form-group
        label(for='from') From*
        input#from.form-control.border-success(type='text' name="from" required )
      input.btn.btn-primary(type='submit' value='Go' )
